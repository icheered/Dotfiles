# Set mic volume to 100
"amixer set Capture 100%"
	Scroll_Lock

# Take a screenshot
#"flameshot gui"
#	Mod4+Shift+s
"flameshot gui"
	Print
"flameshot gui"
	Mod4+Shift+s

# Launch rofi
"rofi -show drun -modi drun -theme glue_pro_blue"
	Mod4+s

# Play-Pause spotify
"playerctl play-pause --player=spotify"
	XF86AudioPlay

# Next-track spotify
"playerctl next --player=spotify"
	XF86AudioNext

# Previous-track spotify
"playerctl previous --player=spotify"
	XF86AudioPrev

# Change background image with mod+shit+ +
"variety --next"
  Mod4+Shift+n 

# Start HTOP
"i3-sensible-terminal -x htop"
  Control+Shift + Escape

# Lock screen
"/home/tjbakker/Dotfiles/Scripts/lock.sh"
  Mod4 + l
  
# Suspend and lock screen
"/home/tjbakker/Dotfiles/Scripts/lock.sh && systemctl suspend"
  Mod4 + Shift + Escape

# Start heater
"/home/tjbakker/Dotfiles/Scripts/StartHeater.sh" 
  m:0x55 + c:10

# Start printer
"/home/tjbakker/Dotfiles/Scripts/StartPrinter.sh" 
  m:0x55 + c:11

# Sleep
"sudo systemctl suspend"
  m:0x55 + c:17

# Lock
"/home/tjbakker/Dotfiles/Scripts/lock.sh"
  m:0x55 + c:14

